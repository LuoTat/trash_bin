{
    "version": "1.2.6",
    "description": "Oopz是一款集语音开黑、社区交友、AI聊天于一体的游戏语音软件",
    "homepage": "https://oopz.cn",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://downloadcdn.oopz.cn/release/126/oopz_setup_v1.2.6.exe",
            "hash": "aab06411a756e8d214311c648c98d16bab79bdbc047542360bbb3fbe1457825d"
        }
    },
    "pre_install":[
        "Expand-7zipArchive \"$dir\\oopz_setup_v$version.exe\" \"$dir\"",
        "Expand-7zipArchive \"$dir\\`$TEMP\\oopz_nsis\\app.7z\" \"$dir\"",
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$TEMP\", \"$dir\\uninstaller\", \"$dir\\oopz_setup_v$version.exe\" -Recurse"
    ],
    "shortcuts": [
        [
            "oopz.exe",
            "Oopz"
        ]
    ],
    "checkver": {
        "script": [
            "$response = Invoke-WebRequest -Uri \"https://www.oopz.cn/download/xx\" -Method Head -ErrorAction Stop",
            "if ($response.StatusCode -eq 200) {",
            "    $redirectUrl = $response.BaseResponse.ResponseUri.AbsoluteUri",
            "    if ($redirectUrl -match 'oopz_setup_v([\\d.]+).exe') {",
            "        $Matches[1]",
            "    } else {",
            "        Write-Error \"Failed to extract version number from redirect URL.\"",
            "    }",
            "} else {",
            "    Write-Error \"Request failed with status code $($response.StatusCode)\"",
            "}"
        ],
        "regex": "(\\S+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloadcdn.oopz.cn/release/126/oopz_setup_v$version.exe"
            }
        }
    }
}
