{
    "version": "8.1.0",
    "description": "5eplay 对战平台",
    "homepage": "https://arena.5eplay.com",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://oss-arena.5eplay.com/client/5EClient-8.1.0.exe",
            "hash": "7618b47c057147693ffa3cfc9c126b1b3aeb0c4ec04d5137cc6bfa045a0a6708"
        }
    },
    "pre_install":[
        "Expand-7zipArchive \"$dir\\5EClient-$version.exe\" \"$dir\"",
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall 5EClient.exe\", \"$dir\\uninstallerIcon.ico\", \"$dir\\5EClient-$version.exe\" -Recurse"
    ],
    "shortcuts": [
        [
            "5EClient.exe",
            "5E对战平台"
        ]
    ],
    "checkver": {
        "script": [
            "$response = Invoke-WebRequest -Uri \"https://arena.5eplay.com/download/latest\" -Method Head -ErrorAction Stop",
            "if ($response.StatusCode -eq 200) {",
            "    $redirectUrl = $response.BaseResponse.ResponseUri.AbsoluteUri",
            "    if ($redirectUrl -match '5EClient-([\\d.]+).exe') {",
            "        $Matches[1]",
            "    } else {",
            "        Write-Error \"Failed to extract version number from redirect URL.\"",
            "    }",
            "} else {",
            "    Write-Error \"Request failed with status code $($response.StatusCode)\"",
            "}"
        ],
        "regex": "(\\S+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://oss-arena.5eplay.com/client/5EClient-$version.exe"
            }
        }
    }
}
